<div class="row justify-content-lg-center g-3">
    <h1><%= title &> Business Contacts </h1>

    <form method = "POST" class="col-lg-6 col-md-10 col-sm-10">

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Name</span>
            <input id="name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="Contact Name"
            name="name" value="<%= item.name %>" required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="Phone">Contact Number</span>
            <input id="phone" type="text" class="form-control" placeholder="Phone" aria-label="Phone" aria-describedby="Contact Number"
            name="phone" value="<%= item.phone %>" required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="Email">Contact Email</span>
            <input id="email" type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="Contact Email"
            name="email" value="<%= item.email %>" required>
          </div>

          <button type="submit" class="btn btn-primary" id="editButton"><i class="fas fa-edit fa-lg"></i> Edit</button>


    </form>
</div>